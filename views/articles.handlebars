<div class="title ml-2 mt-2">
    <h1>Articles</h1>
</div>
<div class="container-fluid">
    <div class="row mb-5">
    {{#each results}}
        <div class="col-sm-12 col-lg-6">
            <div class="card mt-5">
                <div class="card-header" style="background-color: lightblue">
                    <div class="row">
                        <div class="col-sm 12 col-lg-9 text-white headline-text">
                            {{this.headline}}
                        </div>
                         <div class="col-sm 12 col-lg-9 text-white summary-text">
                           {{this.summary}}
                        </div>
                        <div class="col-sm 12 col-lg-9 text-white link-text"></div>
                            <a href="http://www.nhl.com/{{this.link}}" target="_blank">https://www.nhl.com{{this.link}}</a></p>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
          <div class="col-sm-12 col-lg-3 d-flex">
                            <button type="button" class="btn btn-success ml-auto open-add-modal" data-toggle="modal" 
                            data-target="#addNote-{{this._id}}" data-articleID={{this._id}} id="open-add-modal" style="max-height: 48px">Add Note</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="addNote-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Adding note for "{{this.headline}}"</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="previous-notes"></div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                Article Id: <span id="article-id-for-note">{{this._id}}</span>
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Title</label>
                                <input type="text" class="form-control" id="note-title">
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Body</label>
                                <textarea class="form-control" id="note-body"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="add-note">Add Note</button>
                    </div>
                </div>
            </div>
        </div>
       
    {{/each}}
    </div>
</div>   




